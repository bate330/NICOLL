procedure TTemplate.FormCreate(Sender: TObject);
var
    Graph: TGraph;
    Text: TText;
    Barcode: TBarcode;
begin
  Graph := TGraph.Create;
  Barcode := TBarcode.Create;
  Text := TText.Create;
  TextNumber:=0;
  GraphNumber:=0;
  BarcodeNumber:=0;
end;

